<script>
    const video = document.querySelector(".hero-video");

    // Loop fix — restart 0.2 seconds before end
    video.addEventListener("timeupdate", function () {
        if (video.duration - video.currentTime <= 0.25) {
            video.currentTime = 0;
            video.play();
        }
    });
</script>

