@{
    ViewData["Title"] = "About Lucidez";
    ViewData["Description"] = "Lucidez is a global IT and Finance technology studio delivering enterprise software, digital platforms and accounting excellence for India & US businesses.";
    Layout = "_Layout";
}

<!-- HERO SECTION WITH VIDEO -->
<section class="hero hero-about">
     <video autoplay muted loop playsinline preload="auto" class="hero-video">
     <source src="/Video/back.webm" type="video/webm">
 </video>

    <div class="hero-overlay"></div>

    <div class="hero-content container text-center">
        <h1 class="gradient-text">About Lucidez</h1>
        <p class="lead mt-3">
            A global IT & Finance technology studio building scalable platforms,
            enterprise software and trusted accounting operations.
        </p>
    </div>
</section>

<!-- WHO WE ARE -->
<section class="reveal">
    <div class="container two-col">

        <div class="text-block">
            <h2 class="gradient-text">Who We Are</h2>
            <p class="muted">
                Lucidez is a next-generation technology and finance studio that blends
                modern software engineering with deep accounting expertise.
                We help businesses design, build and scale digital products while
                maintaining financial clarity and compliance.
            </p>

            <p class="muted">
                Our work spans social platforms, enterprise systems, fintech integrations,
                and full-spectrum accounting services across India and the United States.
                We operate as a long-term partner — not just a service provider.
            </p>
        </div>

        <div class="card p-4">
            <h4 class="gradient-text">What Makes Us Different</h4>
            <ul class="muted" style="line-height:1.9;">
                <li>Single partner for technology & finance</li>
                <li>Product-first engineering mindset</li>
                <li>Compliance-driven accounting processes</li>
                <li>Security & privacy by design</li>
                <li>Scalable, enterprise-ready delivery</li>
            </ul>
        </div>

    </div>
</section>

<!-- MISSION & VISION -->
<section class="reveal">
    <div class="container two-col">

        <div class="text-block">
            <h2 class="gradient-text">Our Mission</h2>
            <p class="muted">
                To empower creators, startups and enterprises by delivering
                clear, reliable and future-ready digital and financial systems.
                We aim to simplify complexity through thoughtful design,
                disciplined execution and ethical technology.
            </p>
        </div>

        <div class="card p-4">
            <h2 class="gradient-text">Our Vision</h2>
            <p class="muted">
                To become a globally trusted product and finance studio —
                recognized for innovation, transparency and world-class execution
                across industries and geographies.
            </p>
        </div>

    </div>
</section>

<!-- WHAT WE DO -->
<section class="reveal">
    <div class="container">
        <div class="section-head">
            <h2 class="gradient-text">What We Do</h2>
            <p class="sub">
                We operate at the intersection of technology, finance and product innovation.
            </p>
        </div>

        <div class="why-grid">

            <div class="tilt-card">
                <h4 class="fw-bold">Product Engineering</h4>
                <p class="muted">
                    Building scalable SaaS platforms, enterprise applications and
                    consumer products like Wannabe and LuPoll.
                </p>
            </div>

            <div class="tilt-card">
                <h4 class="fw-bold">Enterprise Software</h4>
                <p class="muted">
                    Custom ERP, CRM, HRM, fintech integrations and cloud-native systems
                    for growing businesses.
                </p>
            </div>

            <div class="tilt-card">
                <h4 class="fw-bold">Accounting & Finance</h4>
                <p class="muted">
                    Managed accounting services for India & US — bookkeeping,
                    payroll, compliance, reporting and audit support.
                </p>
            </div>

            <div class="tilt-card">
                <h4 class="fw-bold">Platform Products</h4>
                <p class="muted">
                    Own IP-driven platforms including Wannabe (social ecosystem)
                    and LuPoll (real-time polling & analytics).
                </p>
            </div>

        </div>
    </div>
</section>

<!-- VALUES -->
<section class="reveal">
    <div class="container two-col">

        <div class="text-block">
            <h2 class="gradient-text">Our Core Values</h2>
            <p class="muted">
                Our values define how we think, build and collaborate with clients.
            </p>

            <ul class="muted" style="line-height:1.9;">
                <li><strong>Innovation with Purpose</strong> — solving real problems</li>
                <li><strong>Transparency & Trust</strong> — clear communication</li>
                <li><strong>Security & Privacy</strong> — by default, not optional</li>
                <li><strong>Execution Excellence</strong> — quality without compromise</li>
                <li><strong>Human-Centered Design</strong> — people first, always</li>
            </ul>
        </div>

        <div class="card p-4">
            <h4 class="gradient-text">Our Culture</h4>
            <p class="muted">
                We believe in ownership, accountability and continuous learning.
                Our teams operate with startup agility and enterprise discipline,
                delivering consistent outcomes for clients worldwide.
            </p>
        </div>

    </div>
</section>

<!-- LEADERSHIP -->
<section class="reveal">
    <div class="container">
        <div class="section-head text-center">
            <h2 class="gradient-text">Leadership</h2>
            <p class="sub">
                Experienced leaders driving strategy, technology and finance.
            </p>
        </div>

        <div class="why-grid">

            <div class="tilt-card text-center">
                <h4 class="fw-bold">Founder & CEO</h4>
                <p class="muted">
                    Leads company vision, product strategy and long-term growth.
                </p>
            </div>

            <div class="tilt-card text-center">
                <h4 class="fw-bold">Head of Engineering</h4>
                <p class="muted">
                    Drives architecture, performance and technical excellence.
                </p>
            </div>

            <div class="tilt-card text-center">
                <h4 class="fw-bold">Director – Finance</h4>
                <p class="muted">
                    Oversees India & US accounting operations, compliance and reporting.
                </p>
            </div>

        </div>
    </div>
</section>

<!-- CTA -->
<section class="cta-block reveal">
    <h3>Looking to partner with Lucidez?</h3>
    <p class="muted">
        Whether you’re building a product, scaling operations or strengthening
        your finance function — we’re here to help.
    </p>
    <a asp-controller="Home" asp-action="Contact" class="btn primary">
        Contact Us
    </a>
</section>
