@{
    ViewData["Title"] = "Careers at Lucidez";
    ViewData["Description"] = "Join Lucidez — a global IT & Finance engineering studio building high-impact digital platforms.";
    Layout = "_Layout";
}

<section class="hero" style="padding-top:120px;">
    <div class="container text-center">
        <h1 class="gradient-text">Careers at Lucidez</h1>
        <p class="lead">We’re building world-class products and looking for world-class talent.</p>
    </div>
</section>

<section class="reveal">
    <div class="container">

        <h3 class="gradient-text">Why Work With Us?</h3>
        <ul class="muted" style="line-height:1.8;">
            <li>Work on next-gen products like Wannabe & LuPoll</li>
            <li>Modern tech stack (.NET, AI, Cloud, Microservices)</li>
            <li>Global accounting operations for India & US clients</li>
            <li>Flexible work environment</li>
            <li>High learning and growth opportunities</li>
        </ul>

        <h3 class="gradient-text mt-4">Open Positions</h3>

        <div class="why-grid">
            <div class="tilt-card">
                <h4>Full-Stack Developer (.NET + React)</h4>
                <p class="muted">Experience: 1–5 years</p>
            </div>

            <div class="tilt-card">
                <h4>Accountant (US Process)</h4>
                <p class="muted">Experience: 1–4 years (QBO, Xero)</p>
            </div>

            <div class="tilt-card">
                <h4>Mobile App Developer (Flutter)</h4>
                <p class="muted">Experience: 1–3 years</p>
            </div>
        </div>

        <a asp-controller="Home" asp-action="Contact" class="btn primary mt-4">Apply Now</a>

    </div>
</section>

<section class="cta-block reveal">
    <h3>Don’t see the right role?</h3>
    <p class="muted">We always welcome talented people.</p>
    <a asp-controller="Home" asp-action="Contact" class="btn primary">Send Your CV</a>
</section>
