@{
    ViewData["Title"] = "Contact Lucidez";
    ViewData["Description"] = "Get in touch with Lucidez for IT solutions, product development, accounting services (India & USA) and strategic partnerships.";
    Layout = "_Layout";
}

<!-- HERO SECTION WITH VIDEO -->
<section class="hero hero-contact">
    <video autoplay muted loop playsinline preload="auto" class="hero-video">
        <source src="/video/back.webm" type="video/webm" />     
    </video>

    <div class="hero-overlay"></div>

    <div class="hero-content container text-center">
        <h1 class="gradient-text">Contact Lucidez</h1>
        <p class="lead mt-3">
            Let’s build scalable technology, reliable finance operations and future-ready platforms together.
        </p>
    </div>
</section>

<!-- CONTACT SECTION -->
<section class="reveal">
    <div class="container two-col">

        <!-- CONTACT FORM -->
        <form asp-action="SubmitContact" method="post" class="card p-4">
            <h3 class="gradient-text mb-3">Send Us a Message</h3>
            <p class="muted mb-4">
                Share your requirements and our team will get back to you shortly.
            </p>

            <div class="mb-3">
                <label class="form-label muted">Full Name</label>
                <input name="Name" class="form-control" placeholder="Your Name" required />
            </div>

            <div class="mb-3">
                <label class="form-label muted">Email Address</label>
                <input type="email" name="Email" class="form-control" placeholder="you@example.com" required />
            </div>

            <div class="mb-3">
                <label class="form-label muted">Company / Organization</label>
                <input name="Company" class="form-control" placeholder="Company name (optional)" />
            </div>

            <div class="mb-3">
                <label class="form-label muted">Message</label>
                <textarea name="Message" class="form-control" rows="5" placeholder="How can we help you?" required></textarea>
            </div>

            <button class="btn primary w-100">
                Send Message
            </button>

            <small class="muted d-block mt-3">
                🔒 Your information is safe with us. We respect your privacy.
            </small>
        </form>

        <!-- CONTACT INFO -->
        <div class="text-block">
            <h3 class="gradient-text">Reach Us</h3>
            <p class="muted">
                Whether you're a startup, enterprise, CPA firm or creator —
                Lucidez is ready to support your growth.
            </p>

            <ul class="muted" style="line-height:1.9;">
                <li><strong>Email:</strong> lucidezindia@gmail.com</li>
                <li><strong>Head Office:</strong> Thaltej, Ahemdabad(Gujrat), India</li>
                <li><strong>Service Regions:</strong> India & United States</li>
                <li><strong>Business Hours:</strong> Mon–Sat, 10:00 AM – 7:00 PM IST</li>
            </ul>

            <div class="card p-3 mt-4">
                <h4 class="gradient-text">What Happens Next?</h4>
                <ul class="muted" style="line-height:1.8;">
                    <li>We review your inquiry</li>
                    <li>Our specialist contacts you</li>
                    <li>Free consultation or discovery call</li>
                    <li>Custom proposal & roadmap</li>
                </ul>
            </div>
        </div>

    </div>
</section>

<!-- FINAL CTA -->
<section class="cta-block reveal">
    <h3>Ready to start your journey with Lucidez?</h3>
    <p class="muted">
        Talk to our experts and explore how we can help you build, scale and succeed.
    </p>
</section>
