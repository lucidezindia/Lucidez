@{
    ViewData["Title"] = "Accounting Services India";
    ViewData["Description"] = "Lucidez India Accounting Services: GST, TDS, payroll, bookkeeping, MIS reporting, compliance & audit support for Indian businesses.";
    Layout = "_Layout";
}

<!-- HERO SECTION WITH VIDEO -->
<section class="hero hero-accounting">
    <video autoplay muted loop playsinline preload="auto" class="hero-video">
     <source src="/Video/back.webm" type="video/webm">
 </video>

    <div class="hero-overlay"></div>

    <div class="hero-content container text-center">
        <h1 class="gradient-text">Accounting Services – India</h1>
        <p class="lead mt-3">
            Complete accounting, compliance & financial operations for Indian businesses —
            accurate, reliable and process-driven.
        </p>
    </div>
</section>

<!-- OVERVIEW -->
<section class="reveal">
    <div class="container">
        <div class="section-head">
            <h2 class="gradient-text">End-to-End Indian Accounting Solutions</h2>
            <p class="sub">
                Lucidez provides managed accounting services for startups, SMEs and enterprises across India.
                Our experienced finance professionals ensure compliance, accuracy and timely reporting —
                allowing business owners to focus on growth.
            </p>
        </div>
    </div>
</section>

<!-- SERVICES -->
<section class="reveal">
    <div class="container two-col">

        <div class="text-block">
            <h3 class="gradient-text">Our Core Services</h3>

            <ul class="muted" style="line-height:1.9;">
                <li>
                    <strong>GST Filing & Reconciliation</strong><br />
                    Monthly, quarterly and annual GST returns, GSTR-1, GSTR-3B, reconciliations and notices handling.
                </li>

                <li>
                    <strong>TDS Compliance</strong><br />
                    TDS calculation, challan payments, quarterly returns and Form 16 / 16A generation.
                </li>

                <li>
                    <strong>Payroll Processing</strong><br />
                    Salary computation, payslips, PF, ESIC, Professional Tax, labour law compliance.
                </li>

                <li>
                    <strong>Bookkeeping & Accounting</strong><br />
                    Daily transaction accounting using Tally, Zoho Books, QuickBooks (India).
                </li>

                <li>
                    <strong>Monthly MIS & Reporting</strong><br />
                    Profit & Loss, Balance Sheet, Cash Flow, variance analysis and management dashboards.
                </li>

                <li>
                    <strong>Year-End Closing & Audit Support</strong><br />
                    Audit schedules, statutory compliance and coordination with auditors.
                </li>
            </ul>

            <a asp-controller="Home" asp-action="Contact" class="btn primary mt-4">
                Book a Free Consultation
            </a>
        </div>

        <div class="card p-4">
            <h4 class="gradient-text">Industries We Serve</h4>
            <ul class="muted" style="line-height:1.8;">
                <li>IT & SaaS Companies</li>
                <li>Startups & MSMEs</li>
                <li>Manufacturing & Trading</li>
                <li>Retail & FMCG</li>
                <li>Financial Services</li>
                <li>Professional Services</li>
            </ul>

            <h4 class="gradient-text mt-4">Tools & Platforms</h4>
            <ul class="muted">
                <li>Tally Prime</li>
                <li>Zoho Books</li>
                <li>QuickBooks (India)</li>
                <li>Excel-based MIS & dashboards</li>
                <li>Secure cloud documentation</li>
            </ul>
        </div>

    </div>
</section>

<!-- WHY LUCIDEZ -->
<section class="reveal">
    <div class="container two-col">

        <div class="text-block">
            <h3 class="gradient-text">Why Choose Lucidez?</h3>
            <p class="muted">
                We combine accounting expertise with technology-driven workflows to deliver accurate,
                compliant and scalable finance operations.
            </p>

            <ul class="muted" style="line-height:1.8;">
                <li>Dedicated India-based accounting team</li>
                <li>Structured processes & checklists</li>
                <li>On-time filings & compliance focus</li>
                <li>Secure document management</li>
                <li>Startup-friendly & enterprise-ready packages</li>
            </ul>
        </div>

        <div class="card p-4">
            <h4 class="gradient-text">Who We Work With</h4>
            <ul class="muted" style="line-height:1.8;">
                <li>Founders & Business Owners</li>
                <li>CFOs & Finance Heads</li>
                <li>Startups & Scaling Companies</li>
                <li>Indian subsidiaries of global firms</li>
            </ul>
        </div>

    </div>
</section>

<!-- CTA -->
<section class="cta-block reveal">
    <h3>Need reliable accounting support in India?</h3>
    <p class="muted">
        Talk to our experts and get a customized accounting solution for your business.
    </p>
    <a asp-controller="Home" asp-action="Contact" class="btn primary">
        Talk to Our Experts
    </a>
</section>
