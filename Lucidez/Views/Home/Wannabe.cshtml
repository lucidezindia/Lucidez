@{
    ViewData["Title"] = "Wannabe — Social Media Platform (2026)";
    ViewData["Description"] = "Wannabe by Lucidez: reels, music, movies, events, creator monetization and AI-driven discovery. Launching 2026.";
    Layout = "_Layout";
}

<section class="hero" style="padding-top:120px;">
    <div class="container text-center">
        <h1 class="gradient-text">Wannabe — Reimagined Social</h1>
        <p class="lead">Launching 2026 — a creator-first universe blending content, events, communities & monetization.</p>
    </div>
</section>

<section class="reveal">
    <div class="container two-col">
        <div class="text-block">
            <h3 class="mb-2">What is Wannabe?</h3>
            <p class="muted">A bold social platform designed with creators at the center. Wannabe merges short-format content, music, events, live sessions, communities & revenue tools — all in one city-like digital ecosystem.</p>

            <ul class="muted mt-3" style="line-height:1.8;">
                <li>🎬 <strong>Reels & Shorts</strong> — high-quality, AI-enhanced content feeds.</li>
                <li>🎵 <strong>Music Library</strong> — licensed tracks for creators and musicians.</li>
                <li>🎤 <strong>Live Events</strong> — perform, host, collaborate and monetize sessions.</li>
                <li>💬 <strong>Communities</strong> — micro-communities that grow organically.</li>
                <li>💰 <strong>Monetization</strong> — paid events, tipping, subscriptions & shop integrations.</li>
                <li>🔍 <strong>AI Discovery</strong> — relevance-driven algorithm, not engagement traps.</li>
            </ul>

            <a asp-controller="Home" asp-action="Contact" class="btn primary mt-3">Partner With Us</a>
        </div>

        <div class="phone-mock" style="margin:auto;">
            <div class="phone-screen">
                <div style="font-size:22px;color:#aeefff">Wannabe Preview</div>
                <div class="app-card"><div class="sq"></div><div><div class="fw-bold">Trending Reel</div><div class="muted small">2m • Music</div></div></div>
                <div class="app-card"><div class="sq"></div><div><div class="fw-bold">Live Concert</div><div class="muted small">Tonight</div></div></div>
                <div class="app-card"><div class="sq"></div><div><div class="fw-bold">Design Talks</div><div class="muted small">Community</div></div></div>
            </div>
        </div>
    </div>
</section>

<section class="reveal">
    <div class="container">
        <h2 class="gradient-text">Roadmap</h2>
        <ul class="muted" style="line-height:1.8;">
            <li><strong>Early Access:</strong> 2025 Q3</li>
            <li><strong>Creator Beta:</strong> 2025 Q4</li>
            <li><strong>Public Launch:</strong> 2026</li>
        </ul>
    </div>
</section>

<section class="cta-block reveal">
    <h3>Join the Wannabe Early Access</h3>
    <p class="muted">Creators, brands and partners get priority onboarding.</p>
    <a asp-controller="Home" asp-action="Contact" class="btn primary">Join Early Access</a>
</section>
