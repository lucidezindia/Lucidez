@* RIGHT SIDE FLOATING CHAT BOX *@

<!-- FLOATING CHAT WIDGET -->
<div id="lucidezChat">

    <!-- Chat Launcher -->
    <button id="chatLauncher" aria-label="Chat with Lucidez">
        💬
    </button>

    <!-- Chat Box -->
    <div id="chatBox">

        <!-- Header -->
        <div class="chat-header">
            <div>
                <strong>Lucidez Support</strong>
                <div class="chat-status">Online • Reply within minutes</div>
            </div>
            <button id="chatClose">✕</button>
        </div>

        <!-- Messages -->
        <div id="chatMessages" class="chat-messages">
            <div class="chat-bubble bot">
                👋 Hi! Welcome to Lucidez.
                How can we help you today?
            </div>
        </div>

        <!-- Input -->
        <div class="chat-input">
            <input id="chatName" placeholder="Your name" />
            <input id="chatInput" placeholder="Type your message…" />
            <button id="chatSend">Send</button>
        </div>

    </div>
</div>
